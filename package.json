{
	"name": "timerdesktop",
	"version": "1.0.0",
	"description": "",
	"main": "main.js",
	"scripts": {
		"start:electron": "electron .",
		"start:react-app": "cd app && npm start",
		"buld:react-app": "run it from the react app package.json",
		"package-mac": "electron-packager . TimerDesktop --platform=darwin --arch=x64 --out=dist --overwrite --ignore=node_modules --prune=true --asar.unpack='resources/**/*'"
	},
	"build": {
		"appId": "com.example.timerdesktop",
		"mac": {
			"target": "dmg",
			"category": "public.app-category.productivity"
		},
		"files": [
			"app/build/**/*",
			"main.js",
			"electron/**/*",
			"package.json"
		],
		"extraFiles": [
			"resources/**/*"
		],
		"asar": true
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"electron": "^33.2.1"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^5.2.0",
		"electron-packager": "^17.1.2",
		"prettier": "^3.4.2"
	}
}
